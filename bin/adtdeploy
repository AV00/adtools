#!/usr/bin/python
#
# A simple script for deploying the artifacts of
# the current directory.
#

from __future__ import print_function

import glob
import os
import re
import sys
from subprocess import call
from subprocess import check_output

all_debs = sorted(glob.glob("*.deb"))
all_lhas = sorted(glob.glob("*.lha"))
user = os.environ.get('BINTRAY_USER')
key = os.environ.get('BINTRAY_API_KEY')

for deb in all_debs:
	deb_info = check_output(['dpkg', '--info', deb])

	m = re.search('Package: ([\w\.-]+)', deb_info)
	pkg = m.group(1)

	m = re.search('Version: ([\w\.-]+)', deb_info)
	version = m.group(1)

	url = 'https://api.bintray.com/content/sba1/adtools-deb/' + pkg + '/' + version + '/' + deb + ';publish=1;override=1'

	print('Uploading ' + deb);
	call(['curl', '-T', deb, '-u' + user + ':' + key, url])

for lha in all_lhas:
	m = re.search('adtools-os4-(.*)\.lha', lha)
	if m is None:
		print('Skipping ' + lha)
		continue
	version = m.group(1)
	url = 'https://api.bintray.com/content/sba1/adtools-native/adtools/' + version + '/' + lha + ';publish=1;override=1'
	print('Uploading ' + lha);
	call(['curl', '-T', lha, '-u' + user + ':' + key, url])
